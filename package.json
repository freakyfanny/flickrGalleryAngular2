    "bugs": {
        "url": "https://github.com/freakyfanny/freakyfannygallery/issues"
    },
    "homepage": "https://github.com/freakyfanny/freakyfannygallery#readme",
    "dependencies": {
        "@angular/common": "2.0.0",
        "@angular/compiler": "2.0.0",
        "@angular/core": "2.0.0",
        "@angular/forms": "^2.0.0",
        "@angular/http": "2.0.0",
        "@angular/platform-browser": "2.0.0",
        "@angular/platform-browser-dynamic": "2.0.0",
        "@angular/router": "^3.0.0",
        "@angular/upgrade": "2.0.0-rc.5",
        "core-js": "^2.4.0",
        "cpx": "^1.5.0",
        "ejs": "^2.5.1",        
        "immutable": "^3.8.1",
        "node-sass": "^4.14.1",
        "reflect-metadata": "^0.1.8",
        "rxjs": "5.0.0-beta.12",
        "typescript": "2.0.2",        
        "webpack-dev-server": "^1.16.2",
        "zone.js": "^0.6.12"
    },
    "devDependencies": {
        "angular2-template-loader": "^0.4.0",
        "awesome-typescript-loader": "^2.2.4",
        "concurrently": "^2.0.0",
        "css-loader": "^0.23.1",
        "extract-text-webpack-plugin": "^1.0.1",
        "file-loader": "^0.8.5",
        "html-loader": "^0.4.3",
        "html-webpack-plugin": "^2.15.0",
        "nodemon": "^1.11.0",
        "null-loader": "^0.1.1",
        "optimize-css-assets-webpack-plugin": "^1.3.0",
        "rimraf": "^2.5.2",
        "sass-loader": "^4.0.2",
        "style-loader": "^0.13.1",
        "ts-loader": "^0.8.1",
        "typescript": "2.0.3",
        "typings": "^1.3.3",
        "unminified-webpack-plugin": "^1.1.1",
        "webpack": "^1.13.0",
        "webpack-merge": "^0.14.0"
    },
    "scripts": {
        "start": "concurrently \"npm run watch-images\" \"npm run watch-config\" \"webpack-dev-server --colors\"",
        "postinstall": "npm run typings install",
        "typings": "typings",
        "pre-build": "npm run clean",
        "clean": "rimraf ./dist && mkdir dist && echo 'Cleaned dist.'",
        "watch-images": "nodemon --watch src/img -x \"npm run copy-images\"",
        "copy-images": "cpx \"src/img/*\" dist/assets/images",
        "watch-config": "nodemon --watch src/config -x \"npm run copy-config\"",
        "copy-config": "cpx \"src/config/*\" dist/config",
        "copy-assets": "npm run copy-images && npm run copy-config && echo \"Files copied.\"",
        "webpack": "webpack --config webpack.config.js && echo \"Webpack built\"",
        "webpack-prod": "webpack --config config/webpack.prod.js && echo Webpack built",
        "build": "npm run pre-build && npm run copy-assets && npm run webpack",
        "build-prod": "npm run pre-build && npm run copy-assets && npm run webpack-prod"
    },
    "keywords": [
    "gallery",
    "flickrgallery",
    "angular2",
    "bootstrap4"
  ]
}