{
    "name": "freakyfannygallery",
    "version": "1.0.0",
    "description": "This is a gallery retrieving photos from flickr by freakyfanny",
    "main": "app.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/freakyfanny/freakyfannygallery.git"
    },
    "author": "Fanny Petersson SÃ¤llberg",
